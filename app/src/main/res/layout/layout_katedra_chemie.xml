<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bcg_color2">

    <LinearLayout
        android:id="@+id/lin_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingTop="30px"
        android:paddingRight="30px"
        android:paddingBottom="30px">

        <TextView
            android:id="@+id/txt_titleForActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:text="Učebne, v ktorých sa vyučuje na Katedre chémie"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lin_1"
        android:background="@drawable/layout_shape"
        android:backgroundTint="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:text="Blok B"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_B212"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/btn_color"
                    android:fontFamily="@font/bree_serif"
                    android:onClick="chooseRoom"
                    android:text="B212"
                    android:textColor="@color/black"
                    app:cornerRadius="30px" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bree_serif"
                android:text="Blok C"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                style="@android:style/Widget.Holo.HorizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20px"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_C010"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30px"
                        android:backgroundTint="@color/btn_color"
                        android:fontFamily="@font/bree_serif"
                        android:onClick="chooseRoom"
                        android:text="C010"
                        android:textColor="@color/black"
                        app:cornerRadius="30px" />

                    <Button
                        android:id="@+id/btn_C011"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30px"
                        android:backgroundTint="@color/btn_color"
                        android:fontFamily="@font/bree_serif"
                        android:onClick="chooseRoom"
                        android:text="A011"
                        android:textColor="@color/black"
                        app:cornerRadius="30px" />

                    <Button
                        android:id="@+id/btn_C017"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30px"
                        android:backgroundTint="@color/btn_color"
                        android:fontFamily="@font/bree_serif"
                        android:onClick="chooseRoom"
                        android:text="A017"
                        android:textColor="@color/black"
                        app:cornerRadius="30px" />

                    <Button
                        android:id="@+id/btn_A018"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30px"
                        android:backgroundTint="@color/btn_color"
                        android:fontFamily="@font/bree_serif"
                        android:onClick="chooseRoom"
                        android:text="A018"
                        android:textColor="@color/black"
                        app:cornerRadius="30px" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>