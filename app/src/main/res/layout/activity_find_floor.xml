<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bcg_color2"
    tools:context=".FindFloor">

    <LinearLayout
        android:id="@+id/lin_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingTop="30px"
        android:paddingRight="30px"
        android:paddingBottom="30px">

        <TextView
            android:id="@+id/txt_titleForActivity3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:text="Poschodia v budove univerzity"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lin_down"
        android:layout_below="@id/lin_up"
        android:layout_alignParentBottom="false"
        android:background="@drawable/layout_shape"
        android:backgroundTint="@color/white">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbVertical="@color/white"
            android:scrollbars="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarThumbHorizontal="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewFloors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        android:layout_centerVertical="false"
                        android:layout_gravity="center" />
                </LinearLayout>
            </HorizontalScrollView>

        </ScrollView>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="30px"
        android:paddingTop="30px"
        android:paddingRight="30px"
        android:paddingBottom="30px">

        <Button
            android:id="@+id/btn_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:backgroundTint="@color/btn_color"
            android:fontFamily="@font/bree_serif"
            android:onClick="changeFloor"
            android:text="PrÃ­zemie"
            android:textColor="@color/black"
            app:cornerRadius="30px" />

        <Button
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:backgroundTint="@color/btn_color"
            android:fontFamily="@font/bree_serif"
            android:onClick="changeFloor"
            android:text="1."
            android:textColor="@color/black"
            app:cornerRadius="30px" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:backgroundTint="@color/btn_color"
            android:fontFamily="@font/bree_serif"
            android:onClick="changeFloor"
            android:text="2."
            android:textColor="@color/black"
            app:cornerRadius="30px" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/btn_color"
            android:fontFamily="@font/bree_serif"
            android:onClick="changeFloor"
            android:text="3."
            android:textColor="@color/black"
            app:cornerRadius="30px" />

    </LinearLayout>
</RelativeLayout>